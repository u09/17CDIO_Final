                  <MenuItem fx:id="close" mnemonicParsing="false" text="Luk" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Min Profil">
            <items>
              <MenuItem fx:id="settings" mnemonicParsing="false" text="Indstillinger" />
                  <MenuItem fx:id="signOut" mnemonicParsing="false" text="Log ud" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Vis">
            <items>
              <MenuItem fx:id="fullScreen" mnemonicParsing="false" text="Fuld skærm" />
                  <MenuItem fx:id="exitFullScreen" mnemonicParsing="false" text="Afslut fuld skærm" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
